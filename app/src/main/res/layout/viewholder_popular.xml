<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout2"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:background="@drawable/cart_bg">

    <ImageView
        android:id="@+id/popularPic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998"
        app:srcCompat="@drawable/pizza_1" />

    <TextView
        android:id="@+id/popularName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="title"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/popularPic"
        app:layout_constraintEnd_toEndOf="@+id/popularPic"
        app:layout_constraintStart_toStartOf="@+id/popularPic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popularFee"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="1.00"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/popularPic"
        app:layout_constraintStart_toStartOf="@+id/popularPic"
        app:layout_constraintTop_toBottomOf="@+id/popularPic"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#D80000"
        app:layout_constraintEnd_toStartOf="@+id/popularFee"
        app:layout_constraintTop_toTopOf="@id/popularFee"
        app:layout_constraintBottom_toBottomOf="@id/popularFee"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addBtn"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/add_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/popularFee"
        app:layout_constraintStart_toStartOf="@+id/popularFee"
        app:layout_constraintTop_toBottomOf="@+id/popularFee">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>